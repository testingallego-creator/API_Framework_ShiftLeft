{
  "compilerOptions": {
    "target": "ES2020",

    /* ðŸ”‘ MUST MATCH node16 */
    "module": "Node16",
    "moduleResolution": "node16",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "types": ["node"],
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },

  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "src/tests",
    "src/mocks",
    "generated"
  ]
}
